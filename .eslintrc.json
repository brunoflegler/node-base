{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": ["standard"],
  "globals": {
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": [2, "never"],
    "no-multiple-empty-lines": [2, { "max": 1 }],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "never"
    }],
    "max-params": [2, { "max": 2 }],
    "generator-star-spacing": [2, {"before": false, "after": true}],
    "no-console": 2
  }
}
